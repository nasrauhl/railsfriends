<div class="panel-header panel-header-sm">
    <div class="header text-center text-capitalize">
        <h1 class="title"><%= @entry.building %></h1>
        </div>
      </div>
      <div class="content">
        <div class="row justify-content-center ">
          <div class="col-md-12">            
            <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center no-gutters">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-password-image">
                            <% if @entry.photo.attached? %>   
                             <image src="<%=(url_for(@entry.photo))%>" style='height: 100%; width: 100%';>                                
                               <% end %>                               
                                </div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class = "text-center text-capitalize">
                                        <p><h3 class="text-gray-900 mb-2 fw-bold"><%= @entry.location %></h3></p> 
                                        <p class="mb-4"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"><title>ic_local_hotel_24px</title>
                                        <g fill="#989898">
                                        <path d="M7 13c1.66 0 3-1.34 3-3S8.66 7 7 7s-3 1.34-3 3 1.34 3 3 3zm12-6h-8v7H3V5H1v15h2v-3h18v3h2v-9c0-2.21-1.79-4-4-4z"></path>
                                        </g>
                                        </svg> <%= @entry.room_type %> <br> 
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 48 48"><title>ic_local_atm_48px</title>
                                            <g fill="#989898">
                                            <path d="M22 34h4v-2h2c1.1 0 2-.9 2-2v-6c0-1.1-.9-2-2-2h-6v-2h8v-4h-4v-2h-4v2h-2c-1.1 0-2 .9-2 2v6c0 1.1.9 2 2 2h6v2h-8v4h4v2zM40 8H8c-2.21 0-3.98 1.79-3.98 4L4 36c0 2.21 1.79 4 4 4h32c2.21 0 4-1.79 4-4V12c0-2.21-1.79-4-4-4zm0 28H8V12h32v24z"></path>
                                            </g>
                                            </svg> RM<%= @entry.rent %>/monthly <br> 
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"><title>ic_school_24px</title>
                                            <g fill="#989898">
                                            <path d="M5 13.18v4L12 21l7-3.82v-4L12 17l-7-3.82zM12 3L1 9l11 6 9-4.91V17h2V9L12 3z"></path>
                                            </g>
                                            </svg> <%= @entry.uni_name %>
                                        </p>
                                        <p><span class="badge bg-dark"><%= @entry.get_upvotes.size %> Likes</span> <span class="badge rounded-pill bg-default">Approx. <%= @entry.distance %>km from campus</span></p>
                                    
                                    <div class="btn-group mb-3">
                                    <button type="button" class="btn btn-warning btn-sm">
                                    <i class="fas fa-thumbs-up"></i> <%= link_to "Like", like_entry_path(@entry), method: :get, class:"link-dark text-decoration-none" %></button>

                                    <button type="button" class="btn btn-outline-warning btn-sm">
                                    <i class="fas fa-thumbs-down"></i> <%= link_to "Dislike", dislike_entry_path(@entry), method: :get, class:"link-dark text-decoration-none" %></button>
                                    </div>
                                    <br/>
                                    <hr>  
                                    <button type="button" class="btn btn-outline-primary btn-round">
                                    <i class="fas fa-heart"></i> <%= link_to favorite_text, favorites_update_path(entry: @entry), id:'favorite_link', remote: true, class: "text-decoration-none" %></button>
                                    <button type="button" class="btn btn-outline-success btn-round">
                                    <span class="website"><i class="fas fa-share"></i> <%= link_to "Visit", "http://#{@entry.link}", class:"text-decoration-none text-success" %></span></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</div>
</div>
</div>


   